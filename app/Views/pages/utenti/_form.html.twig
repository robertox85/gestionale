<h3 class="sm:col-span-2 mt-4 mb-4 sm:mb-0 text-xl font-bold text-gray-900 dark:text-white">
    {{ 'Account Data'|trans }}
</h3>

<div class="grid sm:grid-cols-2 gap-4 sm:gap-6 mt-4" >

    <div class="mb-4">
        <label for="username" class="{{ getLabelClass() }}">
            {{ 'Username'|trans }}
        </label>
        <input type="username" name="username" id="username" value="{{ utente.username }}"
               class="{{ getInputClass() }}">
    </div>


    <div class="mb-4">
        <label for="email" class="{{ getLabelClass() }}">
            {{ 'Email'|trans }}
        </label>
        <input type="email" name="email" id="email" value="{{ utente.email }}"
               class="{{ getInputClass() }}">
    </div>

    <div class="mb-4" x-data="{
            password: '',
            passwordError: '',
            show: false
        }">
        <label for="password" class="{{ getLabelClass() }}">
            {{ 'Password'|trans }}
        </label>
        <div class="input-container relative">
            <input
                    :type="show ? 'text' : 'password'"
                    name="password"
                    id="password"
                    value=""
                    x-bind:value="password"
                    @focusout="password = $event.target.value; passwordError = window.validatePassword(password)"
                    @change="passwordError = window.validatePassword(password)"
                    class="{{ getInputClass() }}">

            <button
                    type="button"
                    @click="
                    password = window.generatePassword(); passwordError = window.validatePassword(password)
                    show = true"
                    class="absolute top-0 mt-2.5 mr-0  right-12 text-gray-600 dark:text-gray-400 text-sm"
            >
                {{ 'Generate'|trans }}
            </button>

            <span

                    toggle="#password_confirm"
                    @click="show = !show"

                    class="
                    absolute
                    cursor-pointer
                    top-0 right-0 mt-3 mr-4 text-gray-600 dark:text-gray-400
">
                <ion-icon
                        x-show="!show"
                        name="eye-outline" class="text-gray-600 dark:text-gray-400"></ion-icon>
                <ion-icon
                        x-show="show"
                        name="eye-off-outline" class="text-gray-600 dark:text-gray-400"></ion-icon>
            </span>
            <p class="text-sm text-gray-600 dark:text-gray-400">
                {{ 'Leave blank if you don\'t want to change it'|trans }}
            </p>
            <p
                x-show="passwordError"
                x-text="passwordError"

               class="text-red-600"></p>

        </div>
    </div>



    <div class="mb-4"

         x-data="{
            password: '',
            passwordError: '',
            show: false,
            passwordMatch: false
        }"
    >
        <label for="password_confirm" class="{{ getLabelClass() }}">
            {{ 'Confirm Password'|trans }}
        </label>
        <div class="input-container relative">

            <input
                    :type="show ? 'text' : 'password'"
                    x-bind:value="password"
                    @focusout="password = $event.target.value; passwordError = window.validatePassword(password);"
                    @change="password = $event.target.value; passwordError = window.validatePassword(password); passwordMatch = (password && document.getElementById('password').value) ? password === document.getElementById('password').value : false;"
                    name="password_confirm" id="password_confirm"
                    class="{{ getInputClass() }}">

            <span

                    toggle="#password_confirm"
                    @click="show = !show"
                    class="
                    absolute
                    cursor-pointer
                    top-0 right-0 mt-3 mr-4 text-gray-600 dark:text-gray-400
">
                <ion-icon
                        x-show="!show"
                        name="eye-outline" class="text-gray-600 dark:text-gray-400"></ion-icon>
                <ion-icon
                        x-show="show"
                        name="eye-off-outline" class="text-gray-600 dark:text-gray-400"></ion-icon>
            </span>
<p
                x-show="passwordError"
                x-text="passwordError"

               class="text-red-600"></p>

            <p
                    x-show="(password && document.getElementById('password').value) && !passwordMatch"
                    class="text-red-600"
            >
                {{ 'Passwords do not match'|trans }}
            </p>
        </div>
    </div>


    <div class="mb-4">
        <label for="ruolo" class="{{ getLabelClass()}}">
            {{ 'Role'|trans }}
        </label>

        <select name="ruolo" id="ruolo"
                class="{{ getInputClass() }}">
            {% for ruolo in ruoli %}
                <option value="{{ ruolo.id }}" {% if utente.getIdRuolo == ruolo.id %}selected{% endif %}>
                    {{ ruolo.nome|trans }}
                </option>
            {% endfor %}
        </select>
    </div>

</div>

<hr class="my-6">

<h3 class="sm:col-span-2 sm:mb-0 text-xl font-bold text-gray-900 dark:text-white">
    {{ 'Personal Data'|trans }}
</h3>
<div class="grid sm:grid-cols-2 gap-4 sm:gap-6 mt-4 " x-data="{ tipo_utente: '{{ utente.getAnagrafica().getTipoUtente() }}' }">
    <!-- Tipo utente: persona fisica o società -->
    <div class="mb-4">
        <label for="tipo_utente" class="{{ getLabelClass() }}">
            {{ 'User Type'|trans }}
        </label>

        <select name="tipo_utente" id="tipo_utente"
                x-model="tipo_utente"
                @change="tipo_utente = $event.target.value; if(tipo_utente == 'Persona') { document.getElementById('nome').value = ''; document.getElementById('cognome').value = ''; document.getElementById('denominazione').value = ''; } else { document.getElementById('nome').value = ''; document.getElementById('cognome').value = ''; document.getElementById('denominazione').value = ''; }"
                x-init="tipo_utente = {% if utente is not null %}'{{ utente.getAnagrafica().getTipoUtente() }}'{% else %}'Persona'{% endif %}"

                class="{{ getInputClass() }}">
            <option value="Persona" {% if utente.getAnagrafica().getTipoUtente() == 'Persona' %}selected{% endif %}>
                {{ 'Person'|trans }}
            </option>
            <option value="Azienda" {% if utente.getAnagrafica().getTipoUtente() == 'Azienda' %}selected{% endif %}>
                {{ 'Company'|trans }}
            </option>
        </select>
    </div>



    <!--- Nome, Cognome, Indirizzo, Cap, città, provincia, telefono, cellulare, pec, codice_fiscale, partita_iva, note -->
    <div class="mb-4" x-show="tipo_utente == 'Persona'">
        <label for="nome" class="{{ getLabelClass()}}">
            {{ 'Name'|trans }}
        </label>
        <input type="text"

               name="nome" id="nome" value="{{ utente.getAnagrafica().getNome() }}"
                class="{{ getInputClass() }}">
    </div >

    <div class="mb-4" x-show="tipo_utente == 'Persona'">
        <label for="cognome" class="{{ getLabelClass() }}">
            {{ 'Surname'|trans }}
        </label>
        <input type="text" name="cognome" id="cognome" value="{{ utente.getAnagrafica().getCognome() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4" x-show="tipo_utente == 'Azienda'">
        <label for="denominazione" class="{{ getLabelClass() }}">
            {{ 'Company Name'|trans }}
        </label>
        <input type="text" name="denominazione" id="denominazione" value="{{ utente.getAnagrafica().getDenominazione() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4">
        <label for="indirizzo" class="{{ getLabelClass() }}">
            {{ 'Address'|trans }}
        </label>
        <input type="text" name="indirizzo" id="indirizzo" value="{{ utente.getAnagrafica().getIndirizzo() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4">
        <label for="cap" class="{{ getLabelClass()}}">
            {{ 'Postal Code'|trans }}
        </label>
        <input
                type="text"
                pattern="[0-9]{5}"
                maxlength="5"
                name="cap" id="cap" value="{{ utente.getAnagrafica().getCap() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4">
        <label for="citta" class="{{ getLabelClass() }}">
            {{ 'City'|trans }}
        </label>
        <input type="text" name="citta" id="citta" value="{{ utente.getAnagrafica().getCitta() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4">
        <label for="provincia" class="{{ getLabelClass() }}">
            {{ 'Province'|trans }}
        </label>
        <input type="text" name="provincia" id="provincia" value="{{ utente.getAnagrafica().getProvincia() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4">
        <label for="telefono" class="{{ getLabelClass() }}">
            {{ 'Phone'|trans }}
        </label>
        <input type="text" name="telefono" id="telefono" value="{{ utente.getAnagrafica().getTelefono() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4">
        <label for="cellulare" class="{{ getLabelClass() }}">
            {{ 'Mobile'|trans }}
        </label>
        <input type="text" name="cellulare" id="cellulare" value="{{ utente.getAnagrafica().getCellulare() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4">
        <label for="pec" class="{{ getLabelClass() }}">
            {{ 'Certified Email'|trans }}
        </label>
        <input type="text" name="pec" id="pec" value="{{ utente.getAnagrafica().getPec() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4" x-show="tipo_utente == 'Persona'">
        <label for="codice_fiscale" class="{{ getLabelClass() }}">
            {{ 'Tax Code'|trans }}
        </label>
        <input type="text" name="codice_fiscale" id="codice_fiscale" value="{{ utente.getAnagrafica().getCodiceFiscale() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4" x-show="tipo_utente == 'Azienda'">
        <label for="partita_iva" class="{{ getLabelClass() }}">
            {{ 'VAT Number'|trans }}
        </label>
        <input type="text" name="partita_iva" id="partita_iva" value="{{ utente.getAnagrafica().getPartitaIva() }}"
                class="{{ getInputClass() }}">
    </div>

    <div class="mb-4">
        <label for="gruppi" class="{{ getLabelClass() }}">
            {{ 'Groups'|trans }}
        </label>

        <select class="{{ getInputClass() }} select2" name="gruppi[]" multiple="multiple">
            {% for gruppo in gruppi %}
                <option
                        {% if gruppo is defined %}
                            {% if gruppo.getId() in utente.getGruppi() | json_encode() %}
                                selected
                            {% endif %}
                        {% endif %}
                        value="{{ gruppo.getId() }}">
                    {{ gruppo.getNome() }}
                </option>
            {% endfor %}
        </select>
    </div>

    <div class="mb-4 ">
        <label for="note" class="{{ getLabelClass() }}">
            {{ 'Note'|trans }}
        </label>
        <textarea name="note" id="note" rows="4"
                    class="{{ getInputClass() }}"
        >{{ utente.getAnagrafica().getNote() }}</textarea>
    </div>

</div>

{% if hasPratiche %}
<hr class="my-8">
    <p class=" text-xl font-bold mb-4 mt-8">
        {{ 'Practices associated with the user'|trans }}
    </p>
<div class="overflow-x-auto">
    {% include 'table.html.twig' with {'headers': headers, 'rows': rows} %}
</div>

{% endif %}


<div class="fixed right-6 bottom-6 group ">
    <button type="submit"  class="submit {{ getSubmitClass() }}">
        {{ button_label|trans }}
    </button>
</div>