{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Edit User'|trans }}
{% endblock %}

{% block content %}
    <section class="bg-white dark:bg-gray-900">
        <div class="py-8 px-4 mx-auto w-full lg:py-16">

            <div class=" flex justify-between w-full items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                    {{ 'Edit User'|trans }}
                </h2>
            </div>

            <form action="{{ url('utenti/edit') }} " method="post" class="w-full">

                <input type="hidden" name="csrf_token" value="{{ csrf_token('utenti/edit') }}">
                <input type="hidden" name="id_utente" value="{{ utente.getId() }}">


                {% include 'utenti/_form.html.twig' with { 'button_label': 'Create', 'ruoli': ruoli, 'gruppi': gruppi, 'utente': utente } %}

            </form>
        </div>
    </section>
{% endblock %}

