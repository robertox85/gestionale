{% extends 'base.html.twig' %}


{% block content %}

    <div class="col-span-12 xl:col-span-7">
        <div class="rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
            <div class="border-b border-stroke px-4 py-4 dark:border-strokedark md:px-6 md:py-6 xl:px-7.5">
                <div class="flex items-start justify-between">
                    <div>
                        <h2 class="text-title-sm2 font-bold text-black dark:text-white">
                            Initial Setup
                        </h2>
                    </div>
                </div>
            </div>

            <div class="px-4 py-4 md:px-6 md:py-6 xl:px-7.5">
                <div class="flex flex-col gap-6">

                    <div class="flex items-center justify-between">
                        <div class="flex flex-grow items-center gap-4.5">
                            <div>
                                <h2 class="mb-2 font-medium text-black dark:text-white">
                                    Drop database
                                </h2>
                            </div>
                        </div>

                        <form action="{{ path('/install/setup') }}" method="post">
                            <input type="hidden" name="action" value="drop">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('setup') }}">
                            <button type="submit" class="rounded bg-red-200 py-1.5 px-2.5 text-sm font-medium text-meta-3">
                                Drop
                            </button>
                        </form>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex flex-grow items-center gap-4.5">
                            <div>
                                <h2 class="mb-2 font-medium text-black dark:text-white">
                                    Create database
                                </h2>
                            </div>
                        </div>

                        <form action="{{ path('/install/setup') }}" method="post">
                            <input type="hidden" name="action" value="create_db">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('setup') }}">
                            <button type="submit" class="rounded bg-green-200 py-1.5 px-2.5 text-sm font-medium text-meta-3">
                                Create DB
                            </button>
                        </form>
                    </div>

                    <!-- To Do Item -->
                    <div class="flex items-center justify-between">
                        <div class="flex flex-grow items-center gap-4.5">
                            <div>
                                <h2 class="mb-2 font-medium text-black dark:text-white">
                                    Create tables
                                </h2>
                            </div>
                        </div>

                        <form action="{{ path('/install/setup') }}" method="post">
                            <input type="hidden" name="action" value="create_tables">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('setup') }}">
                            <button type="submit" class="rounded bg-green-200 py-1.5 px-2.5 text-sm font-medium text-meta-3">
                                Create
                            </button>
                        </form>
                    </div>

                    <!-- To Do Item -->
                    <div class="flex items-center justify-between">
                        <div class="flex flex-grow items-center gap-4.5">
                            <div>
                                <h2 class="mb-2 font-medium text-black dark:text-white">
                                    Create admin user
                                    <small class="text-meta-3">(username: admin, password: admin)</small>
                                </h2>
                            </div>
                        </div>

                        <form action="{{ path('/install/setup') }}" method="post">
                            <input type="hidden" name="action" value="create_admin">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('setup') }}">
                            <button type="submit" class="rounded bg-green-200 py-1.5 px-2.5 text-sm font-medium text-meta-3">
                                Create
                            </button>
                        </form>
                    </div>


                    <div class="flex items-center justify-between">
                        <div class="flex flex-grow items-center gap-4.5">
                            <div>
                                <h2 class="mb-2 font-medium text-black dark:text-white">
                                    Send Test Email
                                </h2>
                            </div>
                        </div>

                        <form action="{{ path('/install/mail') }}" method="post">
                            <input type="hidden" name="action" value="send_email">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('setup') }}">
                            <button type="submit" class="rounded bg-green-200 py-1.5 px-2.5 text-sm font-medium text-meta-3">
                                Send
                            </button>
                        </form>
                    </div>






                </div>
            </div>
        </div>
    </div>


{% endblock %}
