{% extends 'base.html.twig' %}


{% block content %}
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-full lg:py-0">
            <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        {{ 'Create an account'|trans }}
                    </h1>
                    <form class="space-y-4 md:space-y-6" action="{{ url('/sign-up') }}" method="post">
                        <div>
                            <label for="email" class="{{ getLabelClass() }}">
                                {{ 'Your email'|trans }}</label>
                            <input type="email" name="email" id="email"
                                   class="{{ getInputClass() }}
                                   placeholder="name@company.com" required="">
                        </div>
                        <div>
                            <label for="password"
                                   class="{{ getLabelClass() }}">{{ 'Password'|trans }}</label>
                            <input type="password" name="password" id="password" placeholder="••••••••"
                                   class="{{ getInputClass() }}"
                                   required="">
                        </div>
                        <div>
                            <label for="password_confirm"
                                   class="{{ getLabelClass() }}">
                                {{ 'Confirm password'|trans }}</label>
                            <input type="password" name="password_confirm" id="password_confirm"
                                   placeholder="••••••••"
                                   class="{{ getInputClass() }}"
                                   required="">
                        </div>
                        <div class="flex items-start">
                            <div class="flex items-center h-5">
                                <input id="terms" aria-describedby="terms" type="checkbox"
                                       class="{{ getCheckboxClass() }} }}"
                                       required="">
                            </div>
                            <div class="ml-3 text-sm">
                                <label for="terms" class="{{ getLabelClass() }}">
                                    {% set terms_and_conditions_url = url('terms_and_conditions') %}
                                    {{ 'accept_terms'|trans ( {"%link%": terms_and_conditions_url} ) | raw }}

                                </label>
                            </div>
                        </div>
                        <button type="submit"
                                class="{{ getSubmitClass() }}">
                            {{ 'Create account'|trans }}
                        </button>
                        <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                            {{ 'Already have an account?'|trans }} <a href="{{ url('sign-in') }}" class="font-medium text-primary-600 hover:underline dark:text-primary-500">
                                {{ 'Login here'|trans }}
                            </a>
                        </p>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('sign-up') }}">
                    </form>
                </div>
            </div>
        </div>
{% endblock %}