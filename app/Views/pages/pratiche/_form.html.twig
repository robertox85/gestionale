<div class="">
    <div class="grid sm:col-span-2 sm:grid-cols-2 gap-4 sm:gap-6">

        <!-- Testo: Nome pratica -->
        <div>
            <label for="nome"
                   class="{{ getLabelClass() }}">
                {{ 'Name'|trans }}
            </label>
            <input
                    class="{{ getInputClass() }}"
                    type="text"
                   name="nome"
                   id="nome"
                   value="{{ pratica.getNome() }}"
                   placeholder="{{ 'Type practice name'|trans }}">
        </div>
        <!-- Testo: Tipologia -->
        <div>
            <label
                    for="tipologia"
                    class="{{ getLabelClass() }}">
                {{ 'Typology'|trans }}
            </label>
            <input
                    class="{{ getInputClass() }}"
                    type="text"
                   name="tipologia"
                   id="tipologia"
                   value="{{ pratica.getTipologia() }}"
                   placeholder="{{ 'Type typology'|trans }}">
        </div>


        <!-- Multi Select: Assegna gruppo -->
        <div>
            <label for="id_gruppo" class="flex justify-between {{ getLabelClass() }}">
                {{ 'Assign group'|trans }}



            </label>

            <select id="id_gruppo" name="id_gruppo" required="" class="select2 {{ getInputClass() }}">
                <option selected="" value="" disabled>{{ 'Select a group'|trans }}</option>
                {% for gruppo in gruppi %}
                    <option
                            {% if pratica.getIdGruppo() is same as gruppo.id %}
                                selected
                            {% endif %}
                            value="{{ gruppo.id }}">{{ gruppo.nome }}</option>
                {% endfor %}
            </select>
        </div>


        <!-- Testo: Competenza -->
        <div>
            <label for="competenza" class="{{ getLabelClass() }}">
                {{ 'Competence'|trans }}
            </label>
            <input
                    class="{{ getInputClass() }}"
                    type="text"
                    name="competenza"
                    id="competenza"
                    value="{{ pratica.getCompetenza() }}"
                    placeholder="{{ 'Type competence'|trans }}">
        </div>
        <!-- Testo: Ruolo generale -->
        <div>
            <label
                    class="{{ getLabelClass() }}"
                    for="ruolo_generale">
                {{ 'General role'|trans }}
            </label>
            <input
                    class="{{ getInputClass() }}"
                    type="text"
                   name="ruolo_generale"
                   id="ruolo_generale"
                   value="{{ pratica.getRuoloGenerale() }}"
                   placeholder="{{ 'Type general role'|trans }}"
            >
        </div>
        <!-- Testo: Giudice -->
        <div>
            <label
                    class="{{ getLabelClass() }}"
                    for="giudice">
                {{ 'Judge'|trans }}
            </label>
            <input
                    class="{{ getInputClass() }}"
                    type="text" name="giudice" id="giudice" value="{{ pratica.getGiudice() }}"
                   placeholder="{{ 'Type judge name'|trans }}">
        </div>

        <!-- Select: Stato -->
        <div>
            <label
                    class="{{ getLabelClass() }}"
                    for="stato">
                {{ 'Status'|trans }}
            </label>
            <select id="stato" name="stato" class="{{ getInputClass() }}">
                <option selected="" disabled>{{ 'Select a status'|trans }}</option>
                <option
                        {% if pratica.getStato() == 'aperta' %}
                            selected
                        {% endif %}
                        value="aperta">
                    {{ 'Open'|trans }}
                </option>
                <option
                        {% if pratica.getStato() == 'chiusa' %}
                            selected
                        {% endif %}
                        value="chiusa">
                    {{ 'Closed'|trans }}
                </option>
                <option
                        {% if pratica.getStato() == 'sospesa' %}
                            selected
                        {% endif %}
                        value="sospesa">
                    {{ 'Suspended'|trans }}
                </option>
            </select>
        </div>



        <!-- upload file -->
        <div class="">

            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="file_input">Upload file</label>
            <input class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" aria-describedby="file_input_help" id="file_input" type="file" multiple>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">SVG, PNG, JPG or GIF (MAX. 800x400px).</p>

        </div>

        <div
                {% if pratica.getScadenze() is not empty %}
                    x-data="{ scadenze: {{ pratica.getScadenze() | json_encode }} }"
                {% else %}
                    x-data="{ scadenze: [] }"
                {% endif %}

                class=" ">
            <label class="{{ getLabelClass() }}">
                {{ 'Deadlines'|trans }}
            </label>
            <template x-for="(scadenza, index) in scadenze" :key="index">
                <div class="flex mt-2 w-full gap-2">
                    <!-- select -->
                    <input
                           x-model="scadenza.data"
                           type="date"
                           class="{{ getInputClass() }}"
                           placeholder="Select date"
                           :name="'scadenze['+index+'][data]'"
                           :id="'scadenza_data_'+index">
                    <input x-model="scadenza.motivo"
                           class="{{ getInputClass() }}"
                           type="text"
                           :name="'scadenze['+index+'][motivo]'" :id="'scadenza_motivo_'+index"
                           placeholder="{{ 'Type deadline reason'|trans }}">
                    <button type="button" x-on:click="scadenze.splice(index, 1)"
                            class="">
                        <ion-icon name="trash" class="text-red-500"></ion-icon>
                    </button>
                </div>
            </template>

            <button x-on:click="scadenze.push({ data: '', motivo: '' }); "
                    class="text-blue-500 flex items-center mt-4" type="button">
                <ion-icon name="add-outline"></ion-icon>
                {{ 'Add deadline'|trans }}
            </button>
        </div>

        <div></div>

        <div
                {% if pratica.getUdienze() is not empty %}
                    x-data="{ udienze: {{ pratica.getUdienze() | json_encode }} }"

                {% else %}
                    x-data="{ udienze: [] }"

                {% endif %}
                class="">
            <label class="{{ getLabelClass() }}">
                {{ 'Hearings'|trans }}
            </label>
            <template x-for="(udienza, index) in udienze" :key="index">
                <div class="flex mt-2 w-full gap-2">
                    <!-- select -->

                    <input
                            class="{{ getInputClass() }}"
                           x-model="udienza.data"
                           type="date"
                           placeholder="Select date"
                           :name="'udienze['+index+'][data]'"
                           :id="'udienza_data_'+index">

                    <input
                            class="{{ getInputClass() }}"
                            x-model="udienza.descrizione"
                           :name="'udienze['+index+'][descrizione]'" :id="'udienza_descrizione_'+index"
                           type="text" placeholder="{{ 'Type hearing reason'|trans }}">


                    <button type="button" x-on:click="udienze.splice(index, 1)"
                            class="">
                        <ion-icon name="trash" class="text-red-500"></ion-icon>
                    </button>
                </div>
            </template>
            <button x-on:click="udienze.push({ descrizione: '', data: '' });"
                    class="text-blue-500 flex items-center mt-4" type="button">
                <ion-icon name="add-outline"></ion-icon>
                {{ 'Add hearing'|trans }}
            </button>

        </div>


        <div></div>

        <div
                x-data="{
    notes: {% if pratica.getNote() is null %}[]{% else %}{{ pratica.getNote() | json_encode }}{% endif %},
    isOpen: [],
    dragging: null,
    dragAndDrop(index) {
        const draggedNote = this.notes[this.dragging];
        this.notes.splice(this.dragging, 1);
        this.notes.splice(index, 0, draggedNote);
    }
}"
                class="">
            <label class="{{ getLabelClass() }}">
                {{ 'Notes'|trans }}
            </label>
            <template x-for="(note, index) in notes" :key="index">
                <div class="mt-4" x-ref="noteContainer" :class="{ 'dragging': dragging === index }">
                    <div class="border rounded-lg p-4"
                         :class="{ 'cursor-move': dragging !== null }"
                         draggable="true"
                         @dragstart="dragging = index"
                         @dragend="dragging = null"
                         @dragover.prevent
                         @drop="dragAndDrop(index)"
                    >
                        <div class="flex justify-between items-center">
                            <button type="button" @click="isOpen[index] = !isOpen[index]"
                                    class="flex items-center text-blue-500">
                                <svg x-bind:class="{'transform rotate-180': isOpen[index]}"
                                     class="w-4 h-4 mr-2 text-gray-700 dark:text-gray-300"
                                     fill="currentColor" viewBox="0 0 20 20">
                                    <path x-show="!isOpen[index]" fill-rule="evenodd"
                                          clip-rule="evenodd"
                                          d="M6 8.586L10 12.586L14 8.586L15.414 10L10 15.414L4.586 10L6 8.586Z"/>
                                    <path x-show="isOpen[index]" fill-rule="evenodd" clip-rule="evenodd"
                                          d="M14 11.414L10 15.414L6 11.414L4.586 13L10 18.414L15.414 13L14 11.414Z"/>
                                </svg>
                                <span class="font-medium text-gray-900 dark:text-white ml-2"
                                      x-text="(note.visibilita == 'pubblica') ? '{{ 'Public'|trans }}' : '{{ 'Private'|trans }}'"></span>
                                <span class="text-gray-500 dark:text-gray-400">- {{ 'Created'|trans }} {{ note.created_at|date('d/m/Y') }}</span>
                            </button>
                            <button type="button" @click="notes.splice(index, 1)"
                                    class="text-red-500 ml-2">
                                <ion-icon name="trash"></ion-icon>
                            </button>
                        </div>
                        <div x-show="isOpen[index]" class="mt-4">
                            <div class="flex flex-col">
                                <label :for="'tipologia_nota_' + index"
                                       class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                                    {{ 'Note Type'|trans }}
                                </label>
                                <select x-model="note.tipologia"
                                        :id="'tipologia_' + index"
                                        :name="'note['+index+'][tipologia]'"

                                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
                                    <option value="registro_contabile">
                                        {{ 'Accounting Register'|trans }}
                                    </option>
                                    <option value="annotazioni">
                                        {{ 'Annotations'|trans }}
                                    </option>
                                </select>
                            </div>
                            <div class="flex flex-col mt-2">
                                <label :for="'nota_' + index"
                                       class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                                    {{ 'Note'|trans }}
                                </label>
                                <textarea x-model="note.descrizione"
                                          :id="'nota_' + index" rows="4"
                                          :name="'note['+index+'][descrizione]'"
                                          class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                          placeholder="{{ 'Note'|trans }}"
                                          x-text="note.descrizione"
                                >

                                </textarea>
                            </div>
                            <div class="flex flex-col mt-2">
                                <label :for="'visibilita_' + index"
                                        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                                    {{ 'Visibility'|trans }}
                                </label>

                                <select x-model="note.visibilita"
                                        :name="'note['+index+'][visibilita]'"
                                        :id="'visibilita_' + index"
                                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
                                    <option value="pubblica" :selected="note.visibilita === 'pubblica'">
                                        {{ 'Public'|trans }}
                                    </option>
                                    <option value="privata" :selected="note.visibilita === 'privata'">
                                        {{ 'Private'|trans }}
                                    </option>

                                </select>
                            </div>
                        </div>
                    </div>
                </div>

            </template>
            <button type="button"
                    @click="notes.push({ tipologia_nota: 'regitro_contabile', nota: '', visibilita: 'privata' }); isOpen.push(true)"
                    class="text-blue-500 flex items-center mt-4">
                <ion-icon name="add-outline"></ion-icon>
                {{ 'Add Note'|trans }}</button>
        </div>




        <div class="sm:col-span-2 text-right">

            <div class="fixed right-6 bottom-6 group">
                <button type="submit" class="{{ getSubmitClass() }} submit">
                    <!-- Save icon -->
                    {{ button_label | default('Save') | trans }}
                </button>
            </div>

        </div>
    </div>
</div>



<div id="modalAddGruppi" tabindex="-1" aria-hidden="true"
     class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    {{ 'Add new group'|trans }}
                </h3>
                <button type="button"
                        class="close-modal text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white ">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->

            <div class="p-6 space-y-6" x-data="{
            nome_gruppo: '',
            utenti: '',
            pratiche: '',
            }">
                <!-- Name, utenti, pratiche -->
                <div class="flex flex-col space-y-2">

                       <label for="nome_gruppo"
                               class="{{ getInputClass() }}"
                            {{ 'Name'|trans }}
                        </label>
                       <input

                               type="text"
                               name="nome_gruppo"
                               id="nome_gruppo"
                               x-model="nome_gruppo"
                               class="{{ getInputClass() }}">

                        <label for="utenti"
                               class="{{ getInputClass() }}">
                            {{ 'Users'|trans }}
                        </label>
                        <select class="select2 " id="utenti" name="utenti[]" multiple="multiple">
                            {% for utente in utenti %}
                                <option
                                        {% if utente is defined %}
                                            {% if utente.getId() in pratica.getUtenti() | json_encode() %}
                                                selected
                                            {% endif %}
                                        {% endif %}
                                        value="{{ utente.getId() }}">
                                    {{ utente.getAnagrafica().getNomeCompleto() }}
                                </option>
                            {% endfor %}
                        </select>


                        <label for="pratiche"
                               class="{{ getInputClass() }}">
                            {{ 'Pratiche'|trans }}
                        </label>
                        <select class="select2" id="pratiche" name="pratiche[]" multiple="multiple">
                            {% for pratica in pratiche %}
                                <option
                                        {% if pratica is defined %}
                                            {% if pratica.getId() in pratica.getGruppi() | json_encode() %}
                                                selected
                                            {% endif %}
                                        {% endif %}
                                        value="{{ pratica.getId() }}">
                                    {{ pratica.getNome() }}
                                </option>
                            {% endfor %}
                        </select>

                </div>



            </div>

            <!-- Modal footer -->
            <div class="flex items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                <button id="save-modal" type="button"
                        class="{{ getSubmitClass() }} submit">
                    {{ 'Save'|trans }}
                </button>
                <button type="button"
                        class="close-modal text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">
                    {{ 'Cancel'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>