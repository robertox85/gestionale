                                                               x-model="newItem.nome"
                                                               :name="newItem.nome"
                                                               id="nome"
                                                               placeholder="{{ 'Type name'|trans }}">
                                                    </div>
                                                    <div>
                                                        <label for="cognome"
                                                               class="block text-sm font-medium text-gray-900 dark:text-white">
                                                            {{ 'Surname'|trans }}
                                                        </label>
                                                        <input type="text"
                                                               x-model="newItem.cognome"
                                                               :name="newItem.cognome"
                                                               id="cognome"
                                                               placeholder="{{ 'Type surname'|trans }}">
                                                    </div>
                                                </div>

                                                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2"
                                                     x-show="newItem.tipo_utente === 'Azienda'">
                                                    <div>
                                                        <label for="denominazione"
                                                               class="block text-sm font-medium text-gray-900 dark:text-white">
                                                            {{ 'Denominazione'|trans }}
                                                        </label>
                                                        <input type="text"
                                                               x-model="newItem.denominazione"
                                                               :name="newItem.denominazione"
                                                               id="denominazione"

                                                               placeholder="{{ 'Type denominazione'|trans }}">
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Modal footer -->
                                            <div class="flex items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                                                <button
                                                        id="defaultModal"
                                                        type="button"
                                                        @click="createItem(newItem)"
                                                        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                                    {{ 'Create'|trans }}
                                                </button>
                                                <button data-modal-hide="defaultModal" type="button"
                                                        class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">
                                                    {{ 'Cancel'|trans }}
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>

                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400 mt-4">

                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            {{ 'Name'|trans }}
                        </th>
                        <th scope="col" class="px-6 py-3">
                            {{ 'Type'|trans }}
                        </th>
                        <th scope="col" class="px-6 py-3">
                            <span class="sr-only">{{ 'Actions'|trans }}</span>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <template x-for="assistito in selectedItems" :key="assistito.id">
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <input type="hidden"
                                   name="assistiti[]"
                                   :value="assistito.id">
                            <td
                                    x-show="assistito.tipo_utente === 'Persona'"
                                    class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                                    x-text="assistito.nome + ' ' + assistito.cognome "></td>

                            <td
                                    x-show="assistito.tipo_utente === 'Azienda'"
                                    class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                                    x-text="assistito.denominazione"></td>

                            <td class="px-6 py-4 text-gray-500 whitespace-nowrap dark:text-gray-400"
                                x-text="assistito.tipo_utente"></td>


                            <td class="px-6 py-4 text-right">
                                <a href="#"
                                   @click.prevent="removeItem(assistito)"
                                   class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                    {{ 'Remove'|trans }}
                                </a>
                            </td>
                        </tr>
                    </template>


                    </tbody>
                </table>
            </div>
        </div>


        <div x-data="searchResults"
             data-selectedItems="{{ pratica.getControparti()  | json_encode() }}"
             data-modalTarget="modalControparti"
             data-entity="controparti"
             class="relative overflow-x-auto sm:col-span-2 p-2.5 bg-gray-50 dark:bg-gray-800 p-8 w-full sm:col-span-2 rounded">
