
<!-- bulk delete form -->
<form action="{{ url('bulk-delete') }}" method="post"
      class="mb-4"
      id="bulk-delete-form">
    <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
    <input type="hidden" name="ids" id="bulk-delete-ids">

    <button type="submit"
            id="bulk-delete-button"
            onclick="return confirm('Are you sure?')"
            disabled
            class="
        inline-flex
        items-center
        px-4
        py-2
        border border-transparent
        text-sm
        font-medium
        rounded-md
        shadow-sm
        text-white
        bg-red-600
        hover:bg-red-700
        disabled:opacity-50
        disabled:cursor-not-allowed
        dark:bg-red-500
        dark:hover:bg-red-600
        dark:text-gray-200
        dark:disabled:bg-red-600
        dark:disabled:hover:bg-red-700
        dark:disabled:text-gray-400
        ">
        <ion-icon name="trash-outline"></ion-icon>
        <span class="ml-2">Delete selected</span>
    </button>

</form>

<table class=" min-w-full divide-y divide-gray-200 dark:divide-gray-700">
    <thead class="bg-gray-50 dark:bg-gray-800">
    <tr class="text-gray-500 dark:text-gray-400">

        <!-- Bulk actions -->
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
            <input type="checkbox" class="form-checkbox text-gray-600 dark:text-gray-400"
                   onclick="checkAll(this)">
        </th>

        {% for column in columns %}
            <th scope="col"
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <!-- Add sort options and icons -->

                <a
                        class="flex items-center space-x-1"
                        href="{{ url('',{sort: column|lower, order: pagination.query.order == 'asc' ? 'desc' : 'asc'}) }}">
                    {{ column }}
                    {% if pagination.query.sort == column|lower %}
                        {% if pagination.query.order == 'asc' %}
                            <ion-icon name="arrow-up-outline"></ion-icon>
                        {% else %}
                            <ion-icon name="arrow-down-outline"></ion-icon>
                        {% endif %}

                    {% else %}
                        <ion-icon name="filter-outline"></ion-icon>
                    {% endif %}
                </a>
            </th>
        {% endfor %}
        <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">
                Actions
            </span>
        </th>
    </tr>
    </thead>
    <tbody>
    {% for entity in rows %}
        <tr class="bg-white dark:bg-gray-800">

            <!-- Bulk actions -->
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <input type="checkbox"
                       class="form-checkbox text-gray-600 dark:text-gray-400"
                       name="selected[]"
                          onclick="checkSelected()"
                       value="{{ entity.id }}">

            </td>

            {% for column in columns %}
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    {{ entity[column|lower] }}
                </td>
            {% endfor %}
            <!-- Actions -->

            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <a href="{{ url('edit/'~ entity.id) }}"
                   class="text-indigo-600 hover:text-indigo-900">Edit</a>
                <a href="{{ url('delete/'~ entity.id) }}" onclick="return confirm('Are you sure?')"
                   class="text-red-600 hover:text-red-900">Delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

