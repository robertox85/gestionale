<aside
        class="fixed top-0 left-0 z-40 w-48 h-screen pt-14 transition-transform -translate-x-full bg-white border-r border-gray-200 md:translate-x-0 dark:bg-gray-800 dark:border-gray-700"
        aria-label="Sidenav"
        id="drawer-navigation"
>
    <div class="overflow-y-auto py-5 px-3 h-full bg-white dark:bg-gray-800">

        {% if session.user %}
            {% include ('search.html.twig') with { 'class': 'md:hidden mb-2' } %}

            {% include ('menu.html.twig') %}

            <!-- include ('helperMenu.html.twig') -->
        {% endif %}

        {% if session.user is null %}
            <div class="flex flex-col items-center justify-center h-full">
                <div class="flex flex-col items-center justify-center mt-8">

                    <a href="{{ url('sign-in') }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                        Login
                    </a>

                    <a href="{{ url('sign-up') }}" class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
                        Register
                    </a>
                </div>
            </div>
        {% endif %}

    </div>

    {% include ('footerMenu.html.twig') %}



</aside>